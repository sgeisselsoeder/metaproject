alias sudo='sudo '

RELEASEINFO=`cat /etc/os-release`
if [[ $RELEASEINFO = *ubuntu* ]]; then
	# echo "Found ubuntu"
	alias update='sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y ; cd ~/projects && ./updateAll.sh && cd - '
elif [[ $RELEASEINFO = *opensuse* ]]; then
	# echo "Found opensuse"
	alias update='sudo zypper up -y --auto-agree-with-licenses ; sudo flatpak upgrade -y --auto-agree-with-licenses ; cd ~/projects && ./updateAll.sh && cd - '
	# sudo zypper dup -y
else
	echo "Unkown OS. Not implementing update strategy"
fi

